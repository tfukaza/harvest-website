---
import Layout from '../layouts/Layout.astro';
import {BASE} from '@constants';
import MixMatch from '../components/landing/MixMatch.svelte';
---

<Layout title="pyHarvest">
	<section id="landing">
		<div>
			<h1>Make your trading strategies come to life.</h1>
			<p>pyHarvest is a Python library that <br>makes coding trading bots a breeze.</p> 	
			<a href=`${BASE}/tutorials/introduction/starter`>Get Started</a>
			<a href=`${BASE}/docs`>API Reference</a>
		</div>
	</section>

	<MixMatch />
	
</Layout>

<style lang="scss">

	#landing {
		display: grid;
		place-items: center;
		height: 90vh;
		
		text-align: center;
		
		> div {
			width: 700px;
			@media screen and (max-width: 1200px){
				width: 90%;
			}
		}

		h1 {
			font-size: 4rem;
			font-weight: 700;
			color: var(--text-primary);
			letter-spacing: -0.03em;
			line-height: 1.0;

			background: #A4A603;
			background: linear-gradient(to right, #A4A603 3%, #7EC20D 50%, #16BA3E 100%);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
		}

		p {
			font-size: 1.5rem;
			line-height: 1.0;
			color: var(--text-primary);
			margin-bottom: 2rem;

			@media screen and (max-width: 1200px){
				font-size: 1.2rem;
			}
		}

		a {
			padding: 0px 10px;
		}
	}

	#mix-n-match {
		background-color: var(--bg-light);
		text-align: center;

		.icon {
			width: 64px;
			height: 64px;
			border-radius: 16px;
			box-shadow: 0px 7px 19px rgb(23 29 45 / 14%);
			padding: 10px;

			img {
				width: 100%;
				height: 100%;
			}
		}
	}
	
</style>
