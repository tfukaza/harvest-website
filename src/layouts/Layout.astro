---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { BASE } from '@constants';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="main-nav">
			<ul>
				<li><a href=`${BASE}/`>Home</a></li>
				<li><a href=`${BASE}/docs`>Docs</a></li>
			</ul>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			
		</footer>
	</body>

</html>
<style is:global>

	@import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono&family=Inter:wght@100..900&display=swap');

	:root {

		--text-light: #2a2a2a;
		--h1-light: #333;
		--h2-light: #444;
		--h3-light: #555;

		--pre-background--light: #282A36;

		--paragraph-font: 'Inter', sans-serif;
		--code-font: 'IBM Plex Mono', monospace;

	}

	html {
		font-family: 'Inter', sans-serif;
		font-size: 16px;
	}

	main {
		display: grid;
		grid-template-columns: repeat(2, 1fr) repeat(8, 100px) repeat(2, 1fr);
		column-gap: 10px;
		justify-content: center;
		min-height: 100vh;

		@media screen and (max-width: 1200px) {
			grid-template-columns: repeat(2, 0fr) repeat(8, 1fr) repeat(2, 0fr);
			
		}
	}

	* {
		margin: 0;
		padding: 0;
	}

	h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	a, p {
		font-size: 1rem;
		color: var(--text-light);
		line-height: 1.5;

	}

	.main-nav {
		width: 100%;
		height: 50px;
		background-color: #ffffff24;
		border-bottom: 1px solid #e3e3e3;
		backdrop-filter: blur(10px);
		position: fixed;
		top: 0;
		left: 0;
		z-index: 1000;

		> ul {
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100%;
			list-style: none;

			li {
				margin: 0 10px;
				cursor: pointer;
				transition: all 0.3s ease;

				&:hover {
					background: #f3f3f3;
				}
			}

			a {
				text-decoration: none;
				color: var(--text-light);
				font-size: 1.0rem;
				line-height: 1.5;
			}
		}
		
	}

	section {
		grid-column: 3 / span 8;
		padding: 50px 0px;

		h2 {
			font-size: 2rem;
			font-weight: 700;
			color: var(--text-primary);
			letter-spacing: -0.03em;
		}
	}

	footer {
		width: 100%;
		height: 300px;
		background-color: #f5f5f5;
		border-top: 1px solid #e3e3e3;


		
	}

	
</style>
