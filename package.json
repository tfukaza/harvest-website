{
  "name": "harvest-website",
  "version": "1.0.0",
  "description": "Website for harvest-python",
  "main": "index.html",
  "scripts": {
    "dev": "npm-run-all --parallel watch:*",
    "watch:11ty": "eleventy --serve",
    "watch:tw": "npx tailwindcss -i _site/css/tw.css -c src/tailwind.config.js -o _site/css/tailwind.css --watch",
    "watch:sass": "sass --watch src/sass:_site/css",
    "build": "ELEVENTY_PRODUCTION=true eleventy --pathprefix=harvest-website && sass src/sass:_site/css && NODE_ENV=production && npx tailwindcss -i _site/css/tw.css -c src/tailwind.config.js -o _site/css/tailwind.css --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tfukaza/harvest-website.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tfukaza/harvest-website/issues"
  },
  "homepage": "https://github.com/tfukaza/harvest-website#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.12.1",
    "daisyui": "^2.15.1",
    "jsdom": "^19.0.0",
    "markdown-it": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prismjs": "^1.25.0",
    "sass": "^1.42.1",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "node-fetch": "^3.0.0",
    "tailwindcss": "^3.0.24"
  }
}
